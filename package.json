{
  "name": "convertviral",
  "version": "0.5.0-beta",
  "private": true,
  "scripts": {
    "dev": "ts-node --project tsconfig.server.json server.ts",
    "dev:next": "next dev",
    "build": "next build && tsc --project tsconfig.server.json && npm run generate-dynamic-sitemaps && npm run postbuild",
    "postbuild": "next-sitemap",
    "start": "NODE_ENV=production node dist/server.js",
    "start:next": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "quality:check": "npm run type-check && npm run lint && npm run format:check && npm run test:ci",
    "quality:fix": "npm run format && npm run lint:fix",
    "postinstall": "prisma generate",
    "worker": "ts-node scripts/start-worker.ts",
    "maintenance": "ts-node scripts/maintenance.ts",
    "generate-sitemap": "next-sitemap",
    "generate-dynamic-sitemaps": "ts-node --project tsconfig.server.json scripts/generate-conversion-sitemaps.ts",
    "update-sitemaps": "ts-node scripts/update-sitemaps.ts",
    "version:patch": "npm version patch && git push origin main --tags",
    "version:minor": "npm version minor && git push origin main --tags",
    "version:major": "npm version major && git push origin main --tags",
    "version:beta": "npm version prerelease --preid=beta && git push origin main --tags",
    "version:rc": "npm version prerelease --preid=rc && git push origin main --tags",
    "release": "npm run quality:check && npm run build && npm run version:minor",
    "release:beta": "npm run quality:check && npm run build && npm run version:beta"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@aws-sdk/client-s3": "^3.840.0",
    "@aws-sdk/s3-request-presigner": "^3.840.0",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^5.7.0",
    "@sentry/nextjs": "^9.34.0",
    "@stripe/react-stripe-js": "^3.7.0",
    "@stripe/stripe-js": "^7.4.0",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@upstash/redis": "^1.35.1",
    "autoprefixer": "^10.4.16",
    "framer-motion": "^10.16.16",
    "next": "^14.2.30",
    "next-auth": "^4.24.11",
    "next-intl": "^4.3.4",
    "next-pwa": "^5.6.0",
    "next-sitemap": "^4.2.3",
    "pdf-lib": "^1.17.1",
    "postcss": "^8.4.32",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.48.2",
    "react-icons": "^4.12.0",
    "redis": "^4.6.11",
    "schema-dts": "^1.1.2",
    "sharp": "^0.34.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "stripe": "^18.3.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "web-vitals": "^3.5.0",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.2.30",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "prisma": "^5.7.0",
    "ts-node": "^10.9.1"
  }
}
